{
  "name": "@shuji-bonji/pdf-reader-mcp",
  "version": "0.2.0",
  "description": "MCP server for PDF structure analysis - read, inspect, and validate PDF internals",
  "type": "module",
  "main": "dist/index.js",
  "exports": {
    ".": "./dist/index.js"
  },
  "bin": {
    "pdf-reader-mcp": "dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "README.ja.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "scripts": {
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "vitest run --config tests/e2e/vitest.config.ts",
    "test:e2e:watch": "vitest --config tests/e2e/vitest.config.ts",
    "test:fixtures": "tsx tests/fixtures/create-test-pdf.ts && tsx tests/fixtures/create-e2e-fixtures.ts",
    "lint": "biome lint ./src ./tests",
    "lint:fix": "biome lint --fix ./src ./tests",
    "format": "biome format ./src ./tests",
    "format:fix": "biome format --write ./src ./tests",
    "check": "biome check ./src ./tests",
    "check:fix": "biome check --fix ./src ./tests",
    "typecheck": "tsc --noEmit"
  },
  "engines": {
    "node": ">=18"
  },
  "keywords": [
    "mcp",
    "mcp-server",
    "pdf",
    "pdf-reader",
    "pdf-structure",
    "pdf-analysis",
    "pdf-validation",
    "tagged-pdf",
    "pdf-ua",
    "digital-signatures",
    "model-context-protocol",
    "ai-tools"
  ],
  "author": "shuji-bonji",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shuji-bonji/pdf-reader-mcp.git"
  },
  "homepage": "https://github.com/shuji-bonji/pdf-reader-mcp#readme",
  "bugs": {
    "url": "https://github.com/shuji-bonji/pdf-reader-mcp/issues"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.6.1",
    "pdf-lib": "^1.17.1",
    "pdfjs-dist": "^4.9.155",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@types/node": "^22.10.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^3.0.0"
  }
}
